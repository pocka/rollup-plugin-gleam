{
	"compilerOptions": {
		"strict": true,
		"lib": ["ES2020"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmit": true
	},
	"include": ["./src/**/*.ts", "./test/**/*.ts"]
}
